---
interface Props {
  class?: string;
  padding?: 'sm' | 'md' | 'lg';
}

const { class: className = '', padding = 'md' } = Astro.props;

const paddingStyles = {
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};
---

<div
  class={`bg-white rounded-lg shadow-md transition-shadow hover:shadow-lg ${paddingStyles[padding]} ${className}`}
>
  <slot />
</div>
