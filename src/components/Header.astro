---
import Container from './Container.astro';

const navLinks = [
  { href: '/accommodations', label: 'Accommodations' },
  { href: '/amenities', label: 'Amenities' },
  { href: '/things-to-do', label: 'Things to Do' },
  { href: '/rates', label: 'Rates' },
  { href: '/about', label: 'About' },
  { href: '/faq', label: 'FAQ' },
  { href: '/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 shadow-sm bg-white">
  <Container>
    <nav class="flex items-center justify-between py-4">
      <!-- Logo and Contact Info -->
      <div class="flex items-center gap-2 md:gap-4">
        <a href="/" class="flex items-center">
          <img src="/logo.webp" alt="Creekside RV Park Logo" class="h-12 w-auto" />
        </a>
        <!-- Desktop Contact Info -->
        <div class="hidden lg:block text-sm">
          <a href="tel:9049008304" class="font-semibold text-gray-900 hover:text-primary transition-colors">904-900-8304</a>
          <p class="text-gray-600">
            <a href="https://www.google.com/maps/search/?api=1&query=11134+New+Kings+Rd+Jacksonville+FL+32219" target="_blank" rel="noopener noreferrer" class="hover:text-primary transition-colors">
              11134 New Kings Rd, Jacksonville 32219
            </a>
          </p>
        </div>
        <!-- Mobile Contact Icons -->
        <div class="flex lg:hidden items-center gap-3 ml-2">
          <a href="tel:9049008304" class="flex items-center justify-center w-10 h-10 rounded-full bg-primary/10 hover:bg-primary/20 transition-colors" aria-label="Call us">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </a>
          <a href="https://www.google.com/maps/search/?api=1&query=11134+New+Kings+Rd+Jacksonville+FL+32219" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center w-10 h-10 rounded-full bg-primary/10 hover:bg-primary/20 transition-colors" aria-label="Get directions">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center space-x-6">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class={`text-sm font-medium transition-colors hover:text-primary ${
                currentPath === link.href ? 'text-primary font-bold' : 'text-gray-700'
              }`}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>

      <!-- CTA Button -->
      <div class="hidden md:block">
        <a
          href="#book"
          class="px-6 py-2 rounded-lg font-semibold text-white bg-sand transition-opacity hover:opacity-90"
        >
          Book Now
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </nav>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="md:hidden overflow-hidden transition-all duration-300 ease-in-out" style="max-height: 0; opacity: 0;">
      <ul class="space-y-3 pb-4">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class={`block py-2 text-base font-medium transition-colors hover:text-primary ${
                currentPath === link.href ? 'text-primary' : 'text-gray-700'
              }`}
            >
              {link.label}
            </a>
          </li>
        ))}
        <li>
          <a
            href="#book"
            class="block w-full text-center px-6 py-3 rounded-lg font-semibold text-white bg-sand"
          >
            Book Now
          </a>
        </li>
      </ul>
    </div>
  </Container>
</header>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  const menuContent = menu?.querySelector('ul');

  button?.addEventListener('click', () => {
    if (!menu) return;

    const isOpen = menu.style.maxHeight !== '0px' && menu.style.maxHeight !== '';

    if (isOpen) {
      // Close
      menu.style.maxHeight = '0';
      menu.style.opacity = '0';
    } else {
      // Open
      const height = menuContent?.scrollHeight || 0;
      menu.style.maxHeight = height + 'px';
      menu.style.opacity = '1';
    }
  });
</script>
