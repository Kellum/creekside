---
import Container from './Container.astro';

const currentYear = new Date().getFullYear();

const footerLinks = {
  pages: [
    { href: '/', label: 'Home' },
    { href: '/about', label: 'About' },
    { href: '/accommodations', label: 'Accommodations' },
    { href: '/amenities', label: 'Amenities' },
  ],
  info: [
    { href: '/things-to-do', label: 'Things to Do' },
    { href: '/rates', label: 'Rates' },
    { href: '/contact', label: 'Contact & Directions' },
    { href: '/branding', label: 'Branding' },
  ],
};
---

<footer class="mt-auto bg-primary">
  <Container class="py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <!-- About Section -->
      <div>
        <h3 class="text-xl font-bold text-white mb-4">Creekside RV Park</h3>
        <p class="text-sm mb-4 text-white/80">
          North Florida's premier RV park offering modern amenities, spacious sites, and a welcoming community.
        </p>
        <div class="text-sm text-white/80">
          <p>11134 New Kings Rd</p>
          <p>Jacksonville, FL 32219</p>
          <p class="mt-2">Phone: 904-900-8304</p>
          <p>Email: info@creekside-rv.com</p>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold text-white mb-4">Quick Links</h4>
        <ul class="space-y-2">
          {footerLinks.pages.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-white/80 transition-colors hover:text-white"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Information -->
      <div>
        <h4 class="text-lg font-semibold text-white mb-4">Information</h4>
        <ul class="space-y-2">
          {footerLinks.info.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-white/80 transition-colors hover:text-white"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>

        <!-- Social Media -->
        <div class="mt-6">
          <h5 class="text-sm font-semibold text-white mb-3">Follow Us</h5>
          <div class="flex space-x-4">
            <a href="#" class="text-white hover:opacity-80 transition-opacity" aria-label="Facebook">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a href="#" class="text-white hover:opacity-80 transition-opacity" aria-label="Instagram">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073z"/>
                <path d="M12 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.162 6.162 6.162 6.162-2.759 6.162-6.162c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-white/20">
      <p class="text-center text-sm text-white/80">
        &copy; {currentYear} Creekside RV Park. All rights reserved.
      </p>
    </div>
  </Container>
</footer>
