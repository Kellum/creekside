---
import BaseLayout from '../layouts/BaseLayout.astro';
import Container from '../components/Container.astro';
import Section from '../components/Section.astro';
import Button from '../components/Button.astro';
import Card from '../components/Card.astro';
import { Icon } from 'astro-icon/components';

const amenitiesList = [
  { name: 'WiFi Internet access', icon: 'mdi:wifi' },
  { name: 'BBQ grills & fire pits', icon: 'mdi:grill' },
  { name: 'Free coffee', icon: 'mdi:coffee' },
  { name: 'Bathhouse with Showers', icon: 'mdi:shower' },
  { name: 'Full kitchen facilities', icon: 'mdi:stove' },
  { name: 'Bikes', icon: 'mdi:bike' },
  { name: 'Firepit(s)', icon: 'mdi:fire' },
  { name: 'Telephone access', icon: 'mdi:phone' },
  { name: 'Bathhouse with A/C & Heat', icon: 'mdi:air-conditioner' },
  { name: 'Washer', icon: 'mdi:washing-machine' },
  { name: '30/50/30 Amp electric', icon: 'mdi:flash' },
  { name: 'Clean, hot showers', icon: 'mdi:shower' },
  { name: 'Swimming Pool', icon: 'mdi:pool' },
  { name: 'Playground', icon: 'mdi:slide' },
  { name: 'Dump Station', icon: 'mdi:dump-truck' },
  { name: 'Cable TV', icon: 'mdi:television' },
  { name: 'Laundry Room', icon: 'mdi:washing-machine' },
  { name: 'RV Storage', icon: 'mdi:warehouse' },
  { name: 'Pet Friendly', icon: 'mdi:paw' },
  { name: 'Propane', icon: 'mdi:propane-tank' },
  { name: 'Clubhouse', icon: 'mdi:office-building' },
  { name: 'Pull-through Sites', icon: 'mdi:rv-truck' },
  { name: 'Back-in Sites', icon: 'mdi:rv-truck' },
  { name: 'Full Hookups', icon: 'mdi:connection' },
];
---

<BaseLayout>
  <!-- Hero Section -->
  <Section paddingY="lg" class="bg-gradient-to-br from-primary to-primary-dark">
    <Container>
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 text-white">
          Amenities
        </h1>
        <p class="text-lg text-white/90">
          Modern comforts and conveniences for your RV adventure
        </p>
      </div>
    </Container>
  </Section>

  <!-- Main Amenities Section -->
  <Section paddingY="lg">
    <Container>
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 text-primary">
          Everything You Need to Enjoy Your Stay
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Creekside RV Park offers a comprehensive range of amenities designed to make your stay comfortable and convenient
        </p>
      </div>

      <div class="flex justify-center">
        <!-- Amenities List -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
          {amenitiesList.map((amenity) => (
            <Card class="flex items-center gap-3">
              <Icon name={amenity.icon} class="w-6 h-6 text-primary flex-shrink-0" />
              <span class="text-gray-700 leading-relaxed">{amenity.name}</span>
            </Card>
          ))}
        </div>
      </div>

      <div class="flex justify-center">
        <div class="mt-12 inline-block p-6 bg-primary/5 rounded-lg border border-primary/20 text-center">
          <h3 class="text-xl font-semibold mb-3 text-gray-900">
            Need something specific?
          </h3>
          <p class="text-gray-600 mb-4 max-w-md">
            If you have special requirements or questions about our amenities, don't hesitate to reach out. Our team is here to help make your stay as comfortable as possible.
          </p>
          <Button href="/contact" variant="outline">Contact Us</Button>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Additional Info Section -->
  <Section paddingY="lg" background="off-white">
    <Container>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Modern Facilities -->
        <div class="text-center">
          <div class="flex justify-center mb-4">
            <svg class="w-12 h-12 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2 text-gray-900">Modern Facilities</h3>
          <p class="text-gray-600">
            Clean, well-maintained bathhouses with hot showers, climate control, and laundry facilities
          </p>
        </div>

        <!-- Full Hookups -->
        <div class="text-center">
          <div class="flex justify-center mb-4">
            <svg class="w-12 h-12 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2 text-gray-900">Full Hookups</h3>
          <p class="text-gray-600">
            Water, electric (30/50 amp), and sewer connections at every site for your convenience
          </p>
        </div>

        <!-- Recreation -->
        <div class="text-center">
          <div class="flex justify-center mb-4">
            <svg class="w-12 h-12 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2 text-gray-900">Recreation & Fun</h3>
          <p class="text-gray-600">
            Swimming pool, playground, fire pits, and clubhouse for gathering with friends and family
          </p>
        </div>
      </div>
    </Container>
  </Section>

  <!-- CTA Section -->
  <Section paddingY="lg" class="bg-gradient-to-br from-primary to-primary-dark text-center">
    <Container size="md">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-white">
        Plan Your RV Adventure Today!
      </h2>
      <p class="text-lg mb-8 text-white/90">
        Creekside RV Park offers a welcoming atmosphere, friendly community, and a range of amenities to meet your stay more comfortable
      </p>
      <Button href="https://resnexus.com/resnexus/reservations/book/60F5DE81-09F9-4DFE-BF33-5E79B3B2E6EF/" target="_blank" rel="noopener noreferrer" variant="secondary" size="lg">Get Started</Button>
    </Container>
  </Section>
</BaseLayout>
