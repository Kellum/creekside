---
import '../styles/global.css';
import AnnouncementBar from '../components/AnnouncementBar.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Creekside RV Park - Jacksonville, North Florida RV Resort',
  description = 'Experience North Florida\'s premier RV park in Jacksonville with modern amenities, spacious sites, and a welcoming community.'
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <AnnouncementBar />
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />

    <!-- Floating Book Now Button -->
    <a
      id="floating-book-btn"
      href="#book"
      class="fixed bottom-6 left-6 z-40 px-6 py-3 rounded-lg font-semibold text-white bg-sand shadow-lg hover:shadow-xl transition-all duration-300 opacity-0 translate-y-20"
      style="pointer-events: none;"
    >
      Book Now
    </a>

    <script>
      const floatingBtn = document.getElementById('floating-book-btn');

      function checkScroll() {
        if (!floatingBtn) return;

        const scrolled = window.scrollY > window.innerHeight;

        if (scrolled) {
          floatingBtn.classList.remove('opacity-0', 'translate-y-20');
          floatingBtn.classList.add('opacity-100', 'translate-y-0');
          floatingBtn.style.pointerEvents = 'auto';
        } else {
          floatingBtn.classList.remove('opacity-100', 'translate-y-0');
          floatingBtn.classList.add('opacity-0', 'translate-y-20');
          floatingBtn.style.pointerEvents = 'none';
        }
      }

      window.addEventListener('scroll', checkScroll);
      window.addEventListener('load', checkScroll);
    </script>
  </body>
</html>
